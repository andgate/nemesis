{
  "name": "@nemesis/chat",
  "version": "0.0.0",
  "description": "A completely generic and boring UI components library",
  "private": true,
  "type": "module",
  "files": ["dist"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "main": "./dist/index.js"
    },
    "./chat.svelte": {
      "types": "./dist/components/chat.d.ts",
      "svelte": "./dist/components/chat.js",
      "main": "./dist/components/chat.js"
    }
  },
  "scripts": {
    "build": "svelte-package",
    "build:watch": "svelte-package -w",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "prettier --check --ignore-path=../../.prettierignore . && eslint \".\"",
    "format": "prettier --write --ignore-path=../../.prettierignore .",
    "clean": "rimraf node_modules .turbo .svelte-kit dist"
  },
  "devDependencies": {
    "@nemesis/eslint-config": "workspace:*",
    "@nemesis/tsconfig": "workspace:*",
    "@sveltejs/package": "2.2.2",
    "tailwind-config": "workspace:*",
    "@sveltejs/adapter-node": "1.3.1",
    "@sveltejs/kit": "1.27.3"
  },
  "peerDependencies": {
    "svelte": "4.2.2"
  }
}