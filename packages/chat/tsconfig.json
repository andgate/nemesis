{
  "extends": [
    "@nemesis/tsconfig/base.json"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.svelte",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}