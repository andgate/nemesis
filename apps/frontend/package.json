{
  "name": "@nemesis/frontend",
  "description": "Frontend nemesis application",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "preview": "vite preview",
    "package": "vite package",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --ignore-path=../../.prettierignore . && eslint \"src\"",
    "format": "prettier --write --ignore-path=../../.prettierignore .",
    "clean": "rimraf node_modules .svelte-kit .turbo"
  },
  "dependencies": {
    "@nemesis/ui": "workspace:*"
  },
  "devDependencies": {
    "@nemesis/eslint-config": "workspace:*",
    "@nemesis/tsconfig": "workspace:*",
    "@playwright/test": "1.39.0",
    "@sveltejs/adapter-node": "1.3.1",
    "@sveltejs/kit": "1.27.3",
    "tailwind-config": "workspace:*",
    "svelte": "4.2.2",
    "svelte-check": "3.5.2",
    "vite": "4.5.0",
    "vitest": "0.34.6"
  }
}